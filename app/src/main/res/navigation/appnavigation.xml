<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appnavigation"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.githubuser.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.githubuser.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slidein_right"
            app:exitAnim="@anim/slidedown_y" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.githubuser.view.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="DataDetail"
            app:argType="com.example.githubuser.model.githubresponse.DetailResponse" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slidedown_y"
            app:exitAnim="@anim/slidein_right" />
        <action
            android:id="@+id/action_detailFragment_to_followerFragment"
            app:destination="@id/followerFragment" />
    </fragment>
    <fragment
        android:id="@+id/followerFragment"
        android:name="com.example.githubuser.view.detail.tab.FollowerFragment"
        android:label="fragment_follower"
        tools:layout="@layout/fragment_follower" >
        <argument
            android:name="currUser" />
    </fragment>
</navigation>