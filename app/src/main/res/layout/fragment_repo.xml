<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    tools:context=".view.detail.tab.RepoFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Reporecview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/repository_itemcv" />

    <ProgressBar
        android:id="@+id/Repoprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="126dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Reporecview"
        app:layout_constraintStart_toStartOf="@+id/Reporecview"
        app:layout_constraintTop_toTopOf="@+id/Reporecview" />
</androidx.constraintlayout.widget.ConstraintLayout>